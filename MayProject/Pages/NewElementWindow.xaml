<Window x:Class="MayProject.Pages.NewElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MayProject.Pages"
        mc:Ignorable="d" 
        Height="130"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="DarkGray"
        FocusManager.FocusedElement="{Binding ElementName=textBoxBookTitle}"
        BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Button Name="buttonClose" Grid.Row="0" Margin="370,0,0,15" Background="DarkGray" Content="X" BorderThickness="0" Click="buttonClose_Click"/>
        <TextBox Name="textBoxTitle" Grid.Row="1" Margin="10, 0, 10, 0" Background="Gray" Foreground="White" FontSize="23"/>
        <Button Name="okButton" Grid.Row="2" Margin="150, 10" Content="Ok" Background="Gray" FontSize="23" Foreground="White" Click="okButton_Click"/>
    </Grid>
</Window>
